<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_header">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/darkdeep</item>
    </style>
    <style name="text_subtitle">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>
    <style name="text_price">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/darkdeep</item>
    </style>
</resources>